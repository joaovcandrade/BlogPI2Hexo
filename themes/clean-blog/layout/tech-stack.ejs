<!-- Page Header -->
<!-- Set your background image for this header in your post front-matter: cover -->
<%
    var cover = item.cover || theme.index_cover;
%>
<header class="intro-header" style="background-image: url('<%- cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                <div class="post-heading">
                    <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
                    <% if (item.subtitle && item.subtitle.length) { %>
                    <h2 class="post-subheading">
                        <%- item.subtitle %>
                    </h2>
                    <% } %>
                    <span class="meta">
                        <!-- Date and Author -->
                        <% if(item.author) { %>
                            Posted by <%- item.author %> on
                        <% } %>
                        <% if(item.date) { %>
                            <%= item.date.format(config.date_format) %>
                        <% } %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">

            <!-- Tags and categories -->
           <% if (item.categories && item.categories.length || item.tags && item.tags.length) { %>
                <div class="col-lg-4 offset-lg-2 col-md-5 offset-md-1 post-tags">
                    <% if (item.tags && item.tags.length){ %>
                        <%- partial('article-tags', {item: item}) %>
                    <% } else { %>
                        <%- partial('article-categories', {item: item}) %>
                    <% } %>
                </div>
                <div class="col-lg-4 col-md-5 post-categories">
                    <% if (item.tags && item.tags.length && item.categories && item.categories.length){ %>
                        <%- partial('article-categories', {item: item}) %>
                    <% } %>
                </div>
            <% } %>

            <!-- Gallery -->
            <% if (item.photos && item.photos.length){ %>
                <%- partial('gallery') %>
            <% } %>

            <!-- Post Main Content -->
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
             <div class="row">
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://d33wubrfki0l68.cloudfront.net/6657ba50e702d84afb32fe846bed54fba1a77add/827ae/logo.svg" width="350" height="550"  class="rounded" alt="...">
                   Hexo
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://img.icons8.com/color/420/gitlab.png" width="350" height="550"  class="rounded" alt="...">
                   Gitlab
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://d2eip9sf3oo6c2.cloudfront.net/tags/images/000/000/256/full/nodejslogo.png" width="350" height="550"  class="rounded" alt="...">
                   Node.js
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://git-scm.com/images/logos/downloads/Git-Icon-1788C.png" width="350" height="550"  class="rounded" alt="...">
                   Git
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://cdn.worldvectorlogo.com/logos/bootstrap-4.svg" width="350" height="550"  class="rounded" alt="...">
                   Bootstrap
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="https://pbs.twimg.com/profile_images/453956388851445761/8BKnRUXg.png" width="350" height="550"  class="rounded" alt="...">
                   Gravatar
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="data:image/png;base64," width="350" height="550"  class="rounded" alt="...">
                 </div>
               </div>
               <div class="col-12 col-md-3 p-1">
                 <div class="text-center">
                   <img src="data:image/png;base64," width="350" height="550"  class="rounded" alt="...">
                 </div>
               </div>
             </div>


                <% if(theme.addthis) { %>
                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=<%- theme.addthis %>"></script>

                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                    <div class="addthis_sharing_toolbox"></div>
                <% } %>
            </div>

            <!-- Comments -->
            <% if (item.comment != false) { %>
                <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    <%- partial("_partial/comments.ejs") %>
                </div>
            <% } %>
        </div>
    </div>
</article>
