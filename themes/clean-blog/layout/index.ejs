<!-- Page Header -->
<!-- Set your background image for this header in the theme's configuration: index_cover -->
<header class="intro-header" style="background-image: url('<%- theme.index_cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                <div class="site-heading">
                    <h1 class="text-white"><%- config.title %></h1>
                    <hr class="small">
                    <span class="subheading"><%- config.subtitle %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="d-flex justify-content-between">
      <h1 class="h5 ml-3 font-weight-bold"> Mais recentes</h1>
      <small class="ml-100">Número de Postagens: <b><%- page.posts.size() %></b></small>
    </div>
    <hr class="mb-5">
  <div class="row justify-content-center">
    <div class="card-deck w-100" uk-grid uk-scrollspy="cls: uk-animation-fade; target: .uk-card; delay: 200;">

      <% page.posts.limit(3).each(function(item, index) { %>
          <%- partial('_partial/recent-post', {item: item, index: index}) %>
      <% }); %>


    </div>
  </div>

<br><br>

    <h1 class="h5 ml-3 font-weight-bold"> Veja também</h1>
    <hr>
    <div class="row"  uk-scrollspy="target: > div; cls: uk-animation-fade; delay: 250">

        <div class="col-12 col-md-9" >

            <% page.posts.each(function(item, index){ %>
              <% if( index > 2){ %>
                <%- partial('_partial/article-index', {item: item}) %>
            <%  } %>

            <% }); %>


       </div>
        <div class="col-12 col-md-3">
              <%- partial('_partial/tag-card') %>
              <br>
              <%- partial('_partial/categories-card') %>
      </div>

            <%- partial('_partial/pagination') %>


    </div>





</div>
