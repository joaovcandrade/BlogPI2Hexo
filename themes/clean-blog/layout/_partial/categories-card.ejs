<div class="row p-3">
  <div class="card w-100 shadow flow-animation">
    <div class="card-header pt-4 text-center">
      <h1 class="h5 font-weight-bold">Categorias</h1>
  </div>
  <div class="card-body p-0">
    <div class="d-inline-flex flex-wrap">
      <% site.categories.forEach(categ => {%>
        <a class=" badge btn-outline-secondary text-uppercase font-italic card-fast flow-animation m-1" href = <%- url_for(categ.path) %>  style="border: 1px solid;">
          <%- categ.name %>
        </a>
        <br>
    <%})%>
    </div>
  </div>
  </div>
</div>
