<div class="card flow-animation my-3 border-0">
  <a href="<%- config.root %><%- item.path %>" style="text-decoration: none">
    <div class="card-body shadow">
      <div class="post-preview">
            <h2 class="post-title m-0">
                <%- item.title || theme.default_post_title || "Sem tÃ­tulo" %>
            </h2>
            <% if (item.subtitle && item.subtitle.length) { %>
                <h3 class="post-subtitle">
                    <%- item.subtitle %>
                </h3>
            <% } %>
            <p><%- item.resume %></p>
        <p class="post-meta m-0">
            <!-- Date and Author -->
            <i class="fa fa-clock-o"></i>&nbsp
            <% if(item.author) { %>
                Postado por <%- item.author %> em
            <% } %>
            <%= item.date.format(config.date_format) %>
        </p>
    </div>
    </a>
  </div>
</div>
