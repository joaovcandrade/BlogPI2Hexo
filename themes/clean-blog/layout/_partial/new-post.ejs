  <div class="col-sm-12 col-md-4 w-100">
      <div class="card flow-animation border-0">

          <a href="<%- config.root %><%- item.path %>" style="text-decoration: none">

            <div class="card-body shadow p-0">

              <div class="d-flex flex-column card-body post-preview" style="min-height: 300px">

                <div class="pl-2">
                  <h5 class="card-title"><%- item.title || theme.default_post_title || "Sem título" %></h5>
                  <p class="card-text"><%- item.resume %></p>
                </div>

                  <div class="mt-auto d-flex flex-wrap p-0 align-items-center">
                    <img src="https://s2.glbimg.com/gsDAfkE5uDLlbz60DNBBExkbRaY=/1200x/smart/filters:cover():strip_icc()/s.glbimg.com/po/rc/media/2014/11/10/23_55_45_120_Pastel.png" style="width:50px; height:50px;" class="rounded-circle float-left img-thumbnail" alt="...">
                    <p class="h5 pl-2 pb-3 align-center" style="color:gray"> <%- (item.author) ? item.author : "Anônimo"  %> </p>
                    <p class="meta h6 d-flex ml-auto mb-0"> <i class="fa fa-clock-o"></i>&nbsp
                    <%
                        const updated = item.updated.format(config.date_format);
                        const date = item.date.format(config.date_format)
                    %>
                    <% if(date ==  updated) {%>
                      Postado em <%= date %>
                    <% }else{%>
                      Atualizado em <%= updated %>
                    <%}%>

                    </p>
                  </div>
              </div>
            </div>
          </a>
     </div>
</div>
