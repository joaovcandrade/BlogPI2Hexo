<div class="col-sm-12 col-md-4 w-100 pt-2 pt-md-0">
    <div class="card flow-animation border-0">

        <a href="<%- config.root %><%- item.path %>" style="text-decoration: none">

          <div class="shadow p-0">

            <div class="d-flex flex-column card-body post-preview " style="min-height: 250px">

              <div class="pl-2">
                <h5 class="card-title"><%- item.title || theme.default_post_title || "Sem tÃ­tulo" %></h5>
                <p class="card-text text-truncate"><%- item.resume %></p>
              </div>

                <div class="mt-auto d-flex flex-wrap p-0 align-items-center">
                  <div class= "d-flex flex-nowrap col-12 p-0">
                    <img
                    <% if(item.author != 'a0' ){ %>
                      src="<%- gravatar(site.data.authors[item.author][1], 40) %>"
                    <% }else{ %>
                      src="<%- site.data.authors.a0[1] %>"
                    <%}%>
                    style="width:50px; height:50px;" class="rounded-circle float-left img-thumbnail" alt="...">

                    <p class="h5 pl-2 pb-3 align-center name-post text-truncate" style="color:gray"> <%- site.data.authors[item.author][0] %> </p>
                  </div>

                  <p class="meta h6 d-flex ml-auto mb-0"> <i class="fa fa-clock-o"></i>&nbspPostado em <%= item.date.format(config.date_format) %></p>
                </div>
            </div>
          </div>
        </a>
   </div>
</div>
